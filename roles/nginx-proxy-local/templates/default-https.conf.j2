server {
    listen 443 ssl;

    server_name {{ domain_name }};

    # Use ssl self-signed certs
    ssl_certificate /etc/nginx/ssl/{{ domain_name }}/server.crt;
    ssl_certificate_key /etc/nginx/ssl/{{ domain_name }}/server.key;
        
    location / {
        proxy_pass http://127.0.0.1:{{ app_port }}/;
    }
}